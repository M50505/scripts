usbTailSerial ()
{

	local node="${1:-/dev/ttyUSB0}"


  node="${node#/dev/}"
  node="${node#tty}"
  node="/dev/tty${node}"

  echo stty -F ${node} 115200
  tail -f ${node}

  return 0

}
