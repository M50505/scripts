#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh

awsEnvCapture ()
{
	echo "v5" >&2

	$* | sed -rn '

/AccessKeyId/ {
	s/^\s*"AccessKeyId/AWS_ACCESS_KEY_ID/
	b cleanUp
}

b

:cleanUp {
	s/"\s*:\s*/=/
	s/",.*$/"/
	p
}
'

}


