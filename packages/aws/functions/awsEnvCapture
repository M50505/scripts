#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh

awsEnvCapture ()
{

	eval $($* | sed -rn '

/AccessKeyId/ {
	s/^\s*"AccessKeyId/AWS_ACCESS_KEY_ID/
	bcleanUp
}

:cleanUp {
	s/"\s*:\s*/=/
	s/",.*$/"/
	p
}
')

}


