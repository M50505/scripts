awsInit ()
{
	local keyId=$(jq ".fields[]| select(.label==\"AWS_ACCESS_KEY_ID\").value" "${AWS_CONFIGS_IMPORT_FILE}" | tr -d \")

	local key=$(jq ".fields[]| select(.label==\"AWS_SECRET_ACCESS_KEY\").value" "${AWS_CONFIGS_IMPORT_FILE}" | tr -d \")
	local region=$(jq ".fields[]| select(.label==\"region\").value" "${AWS_CONFIGS_IMPORT_FILE}" | tr -d \")

	dvar keyId

	local awsConfigDir="${HOME}/.aws"
	local awsConfigFile="${awsConfigDir}/config"
	local awsCredentialsFile="${awsConfigDir}/credentials"

	[[ -d ${HOME}/.aws ]] || mkdir "${awsConfigDir}"

	cat <<EOF > "${awsConfigFile}"
[default]
region = ${region}
output = text
EOF

	cat <<EOF > "${awsCredentialsFile}"
[default]
aws_access_key_id = ${keyId}
aws_secret_access_key = ${key}
EOF

}

