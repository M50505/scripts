espSetPort ()
{
	ESPTOOL_PORT=$(usbListSerial  | egrep -i 'CDC|ACM|CP21|FT' | egrep -iv JTAG | head -1)
	export ESPTOOL_PORT="${ESPTOOL_PORT%:*}"
}
