#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh
#	
# Author:              Martin Cribbins
# Revision history:
#
# 2025-02-20 - Initial version.
#	
#_doc ${1} 20250220160226 " " && exit 0

#
#	Most of the time we will likely already have the tools that are
#	found via apt already installed. If the argument "apt" is specified,
#	then an apt update, upgrade, and then apt install of all required 
#	packages is performed.
#

args="$*"

[[ -z "${args}" ]] && args="apt main sdk esp"


installBase="${HOME}/zephyrproject"

if [[ ${args} =~ remove ]] 
then
  msgWarning "Removing the current Zephyr installation."

  cd ${HOME}
  rm -rf zephyr*
  rm -rf .local/bin/west
  rm -rf .local/zep*

  exit
fi

if [[ ${args} =~ apt ]] 
then
  msgInfo "Using sudo to run apt install for required packages, you will be prompted for the root password."

	sudo apt update -y
	sudo apt upgrade -y
	
	sudo apt install -y \
	cmake \
	ninja-build \
	gperf \
	ccache \
	dfu-util \
	device-tree-compiler \
	xz-utils \
	file \
	make \
	gcc \
	gcc-multilib \
	g++-multilib \
	libsdl2-dev \
	lzma \
	liblzma-dev \
	libbz2-dev \
	libmagic1 \
  python3-venv \
  python3-tk \
  wget

fi

if [[ ${args} =~ main ]]
then

  msgInfo "Performing the main installation of Zephyr-RTOS 4.3.99"

  rm -rf "${installBase}"
  rm -rf ~/.west
  rm -rf ~/.cmake

  pip3 uninstall -y west

  [[ -f ~/.local/bin/west ]] && rm ~/.local/bin/west

  pip3 install west
  pip3 install pyelftools
  pip3 install click
  pip3 install pylzma
  pip3 install jsonschema
  pip3 install cbor2
  pip3 install backports.lzma
  pip3 install requests

  west init "${installBase}"

  cd "${installBase}"

  west update
  west zephyr-export

  cd "${installBase}"/zephyr/scripts

  pip3 install -r requirements.txt

  cd "${installBase}"/zephyr
fi


if [[ ${args} =~ sdk ]]
then
  msgInfo "Performing the installation of Zephyr-RTOS SDK version $(<${installBase}/SDK_VERSION})"

  west sdk install --install-base "${installBase}"
fi

if [[ ${args} =~ esp ]]
then
  msgInfo "Performing the installation of Espressif blobs for Zephyr"

  cd "${installBase}"
  west blobs fetch hal_espressif
fi

