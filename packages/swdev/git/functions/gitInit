#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh

gitInit ()
{
	_doc ${1} 20241020102132 "Displays or sets the credentials that are associated with the specified Git service user ID." && return 0

	local gitCredFile="${HOME}/.git-credentials"
	local gitConfigFile="${HOME}/.gitconfig"
	local linuxConfigFile="/local/wsl/xfer/linux-configs.json"

	if [[ $# -gt 0 ]]
	then
		if [[ "${1}" = "-l" ]]
		then
			jq ".fields[]| select(.label | startswith(\"gitcred\")).label" "/local/wsl/xfer/linux-configs.json" | \
			sed -r 's/"gitcred-//;s/"//'

			return 0
		fi

		local credKey="${1}"

		jq ".fields[]| select(.label==\"gitcred-${credKey}\").value" "${linuxConfigFile}" | \
		tr -d \" > "${gitCredFile}"

		jq ".fields[]| select(.label==\"gitconfig-${credKey}\").value" "${linuxConfigFile}" | \
		sed '
{
	s/^"//
	s/"$//
	s/\\n/\n/g
	s/\\"/"/g
}' > "${gitConfigFile}"

		export GIT_SSH_COMMAND="ssh -i ${HOME}/.ssh/id_rsa.${1}"
	else
		if [[ -f "${gitCredFile}" ]]
		then
			local cred=$(<"${gitCredFile}")
			cred=${cred#*//}
			cred=${cred%:*}
			echo ${cred}
		else
			echo "No credentials have been set as yet." >&2
			return 1
		fi
	fi

	export GITHUB_TOKEN=$(gitGetToken)
}

