#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh

gitWipAll ()
{
	local status=1
	local newDir
	local oldDir="${PWD}"
	
    dvar oldDir
    
	for newDir in *
	do
        echo -n "${newDir}"

		if gitNeedsCommit "${newDir}"
		then
			echo " Synchronizing"
			
			cd "${newDir}"

			gitwip

			cd "${oldDir}"
        else
            echo " OK"
		fi
	done
}

