#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh

gitWipAll ()
{
	_doc ${1} 20241020102132 "Recursively decends from the current directory to call the gitWip for each Git repository in any subdirectories." && return 0

	local status=1
	local newDir
	local oldDir="${PWD}"
	local previousGitUser=$(gitInit)


	for newDir in *
	do
        echo -n "${newDir}"

		if gitNeedsCommit "${newDir}"
		then
			echo " Synchronizing"
			
			cd "${newDir}"

			gitInit $(gitGetRepoUser)

			gitWip

			cd "${oldDir}"
        else
            echo " OK"
		fi
	done

	gitInit ${previousGitUser}
}

