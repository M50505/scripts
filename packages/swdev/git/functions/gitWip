_doc ${1} 20211118224002 "Commits and pushes, using either a provided message or else 'WIP'." && exit 0

gitWip ()
{
	if [[ $# -gt 0 ]]
	then
		message="${*}"
	else
		message="WIP"
	fi

	(
		gitCdRoot

		if gitIsUpdated
		then
			gitPub "${message}"
		fi
	)	
}
