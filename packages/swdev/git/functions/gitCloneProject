#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh
gitCloneProject ()
{
	_doc $1 20170525133155 "changes directory to the projects root directory that is pointed to by the PROJECTS_ROOT environment variable, clones the repository whose URL is captured in the clipboard, adn then defines thaat repo as the remote named 'origin'." && return 0


	local projectName="${1:-Enter the project repo URL}"
	local url="$(clipPastePrompt \"${projectName}\")"
	projectName="$(basename ${url} .git)"

	[[ -d ${PROJECTS_ROOT} ]] && cd ${PROJECTS_ROOT}

	git clone "${url}"

	sed -r -i '/\[remote / {s,$,\n  push = +refs/heads/*\n  push = +refs/tags/*,}' ${projectName}/.git/config
}
