_doc ${1} 20210710125553 "Creates a feature/bug-fix branch." && exit 0

gitFeature ()
{
	if [[ $# -lt 1 ]]
	then
		cat >&2 <<EOF
Usage: gitFeature "<branch-name>"
EOF
		return 1
	fi

	git checkout -B ${1}
}
