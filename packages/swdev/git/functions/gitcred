gitcred ()
{
	local gitStoreDir=.config/git

	if [[ $# -gt 0 ]]
	then
		rm -f ${HOME}/.git-credentials ${HOME}/.gitconfig

		cp /local/${gitStoreDir}/gitcred-${1} ${HOME}/.git-credentials
		cp /local/${gitStoreDir}/gitconfig-${1} ${HOME}/.gitconfig
		export GIT_SSH_COMMAND="ssh -i ${HOME}/.ssh/id_rsa.${1}"
	else
		[[ -f ${HOME}/.git-credentials ]] && cat ${HOME}/.git-credentials
		echo ------------------------------------
		[[ -f  ${HOME}/.gitconfig ]] && cat ${HOME}/.gitconfig
	fi
}

