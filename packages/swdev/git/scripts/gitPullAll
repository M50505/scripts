#!/usr/bin/env bash
# vim:tabstop=2:shiftwidth=2:nu:filetype=sh

_doc ${1} 20241020102132 "Recursively descends to all subdirectories, and for each git repository that is found, executes a git pull." && exit 0

for dir in *
do
	if [[ -d ${dir} ]]
	then
		(
			cd ${dir}
			gitIsSynced || git pull
		)
	fi
done

